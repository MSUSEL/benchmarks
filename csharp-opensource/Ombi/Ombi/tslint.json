{
  "$schema": "http://json.schemastore.org/tslint",
  "extends": "tslint:recommended",
  "rules": {
    "object-literal-sort-keys": false,
    "no-console": [
      false
    ],
    "max-line-length": [
      true,
      250
    ],
    "arrow-parens": false,
    "radix": false,
    "no-angle-bracket-type-assertion": false,
    "indent": [
      false
    ],
    "no-unused-expression": [
      true,
      "allow-new"
    ],
    "max-classes-per-file": [
      false
    ],
    "no-shadowed-variable": false,
    "comment-format": [
      false
    ],
    "no-namespace": [
      false
    ],
    "no-internal-module": [
      false
    ],
    "whitespace": [
      false, 
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ],
    "no-trailing-whitespace":[
      false
    ]
  }
}